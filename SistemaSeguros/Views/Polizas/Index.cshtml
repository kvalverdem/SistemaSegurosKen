@model IEnumerable<SistemaSeguros.Poliza>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tipos de Pólizas en Sistema</h2>

<p>
    @Html.ActionLink("Crear Nuevo Tipo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipoRiesgo.Nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TipoRiesgo.Nombre)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID_Poliza }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID_Poliza }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID_Poliza })
        </td>
    </tr>
}

</table>
